
<table>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'delete', [post], method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>


